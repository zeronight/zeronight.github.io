{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": [
      "node",
      "jest",
      "puppeteer",
      "jest-environment-puppeteer",
      "webpack-dev-server",
      "global-common",
      "global-node"
    ],
    "baseUrl": ".",
    "paths": {
      "types/*": ["./types/*"]
    }
  },
  "include": [
    "lib",
    "config",
    "scripts",
    "test"
  ]
}